{% extends 'base.html.twig' %}
{% block title %}{{ program.title }} / Saison {{ season.number}}{% endblock %}

{% block body %}

    <div class="container pt-3">
        <div class="row">
            <div class="media">
                <img class="align-self-start mr-3" style="width: 150pt" src="{{program.poster}}" alt="{{ program.title }} poster">
                <div class="media-body">
                    <h1 class="mt-0 text-center">Saison {{ season.number }} de {{ program.title }}</h1>
                    <p>{{ season.description }}</p>
                    <p>Année de sortie : {{ season.year }}</p>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-4 offset-4">
                <ul class="list-group">
                    <li class="list-group-item list-group-item-danger text-center mb-3"> Liste des épisodes </li>
                    {% for episode in episodes %}
                        <a href="{{ path('show_episode', {id:episode.id} )}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span class="badge badge-primary badge-pill">{{ episode.number }}</span> {{ episode.title }}
                        </a>
                    {% endfor %}
                </ul>
            </div>
        </div>


        <div class="row d-flex justify-content-center mt-5">
            <div class="col-3 offset-1">
                <a type="button" class="btn btn-outline-dark" href="/showbyprogram/{{ program.title }}">Retour à la série</a>
            </div>
        </div>
    </div>




{% endblock %}
