{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Season</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Année de sortie</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
            </tbody>
        </table>


        <div class="row d-flex justify-content-around mt-5">

        <a href="{{ path('season_index') }}" type="button" class="btn btn-outline-dark" >Retour à l'ensemble des séries</a>

        <a type="button" class="btn btn-outline-warning" href="{{ path('season_edit', {'id': season.id}) }}">Modifier</a>

        {{ include('season/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
